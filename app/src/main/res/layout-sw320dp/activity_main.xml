<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context=".MainActivity"
    android:background="@drawable/fondo"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="Esta es la pantalla 320"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ajustes"
        android:onClick="bajustesClick"
        android:id="@+id/bajustes"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botonAjustes"
        android:id="@+id/textView1"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"

        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/bajustes"
         />


    <ImageButton
        android:layout_width="167.5dp"
        android:layout_height="125dp"
        android:src="@drawable/botonrecorridos"
        android:onClick="brecorridoClick"
        android:id="@+id/brecorrido"
        android:scaleType="centerInside"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="83dp"/>




    <ImageButton
        android:layout_width="167.5dp"
        android:layout_height="125dp"
        android:scaleType="centerInside"
        android:src="@drawable/botonpuntosinteres"
        android:onClick="bptointeresClick"
        android:id="@+id/bptointeres"
        android:layout_alignTop="@+id/brecorrido"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recorridos"
        android:id="@+id/textView"
        android:layout_below="@+id/bptointeres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="47dp"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_large_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuÃ© ver"
        android:id="@+id/textView2"
        android:layout_below="@+id/bptointeres"
        android:layout_alignRight="@+id/bptointeres"
        android:layout_alignEnd="@+id/bptointeres"
        android:layout_marginRight="35dp"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambio de idioma"
        android:id="@+id/button"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp" />


</RelativeLayout>
